#!/usr/bin/env bash
set -euo pipefail

BK_ZSTASH_ID="${BUILDKITE_PLUGIN_ZIPSTASH_ID:-}"


cache_result=$(buildkite-agent meta-data get "zipstash.restore.$BK_ZSTASH_ID.result")

BK_ZSTASH_SKIP=${cache_result:-false}

zstash save \
  --endpoint "${BUILDKITE_PLUGIN_ZSTASH_ENDPOINT}" \
  --key "${BUILDKITE_PLUGIN_ZSTASH_KEY}" \
  --bucket-url "${BUILDKITE_PLUGIN_ZSTASH_BUCKET_URL}" \
  --paths "${BUILDKITE_PLUGIN_ZSTASH_PATHS}" \
  --skip="${BK_ZSTASH_SKIP}"
